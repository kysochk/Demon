<Window x:Class="Demon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demon"
        mc:Ignorable="d"
        
        Title="Школа языков Леарн" Height="700" Width="960" 
          WindowStartupLocation="CenterScreen">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="9*" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.ColumnSpan="2" LastChildFill="True">
                <Image Source="/Logo/school_logo.png" DockPanel.Dock="Left"/>
                <TextBlock Text="Школа языков Леарн" FontSize ="55" Margin="0,0,0,0.4" Width="826" />
            </DockPanel>
            <Image />
            <Frame x:Name="FrameMain" Grid.Row="1" Grid.ColumnSpan="2" NavigationUIVisibility="Hidden" />
        </Grid>

   
</Window>
